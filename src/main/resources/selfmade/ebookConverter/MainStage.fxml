<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="375.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="selfmade.ebookConverter.view.EbookView">
<HBox layoutY="1.0" prefHeight="375.0" prefWidth="520.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
      <children>
         <VBox prefHeight="335.0" prefWidth="85.0">
            <children>
               <Label alignment="TOP_LEFT" prefHeight="28.0" prefWidth="80.0" text="First Step" />
               <Label alignment="TOP_LEFT" prefHeight="29.0" prefWidth="83.0" text="Second Step">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Label>
            </children>
         </VBox>
         <VBox prefHeight="335.0" prefWidth="105.0">
            <children>
               <Button fx:id="fileButton" mnemonicParsing="false" onAction="#selectFile" text="Choose File" />
               <Button fx:id="createButton" mnemonicParsing="false" onAction="#setCreateButton" prefHeight="26.0" prefWidth="87.0" text="Create File">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Button>
               <Button fx:id="ankiButton" mnemonicParsing="false" text="Anki">
                  <VBox.margin>
                     <Insets top="161.0" />
                  </VBox.margin>
               </Button>
            </children>
         </VBox>
         <VBox prefHeight="335.0" prefWidth="307.0">
            <children>
               <TextField fx:id="fileTextField" prefHeight="26.0" prefWidth="240.0">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
               </TextField>
               <TextField fx:id="createFileTextField" promptText="Please enter name...">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </TextField>
            </children>
         </VBox>
      </children>

</HBox>

</AnchorPane>
